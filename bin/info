#!/bin/bash

GREEN="\033[0;32m"
NO_COLOR="\033[0m"

info() {
    echo -e -n "$GREEN"
    printf "%-20s%s" "$1"
    echo -e -n "$NO_COLOR"
    echo "$2"
}

host=$(hostname)
kernel=$(uname -r)
packages=$(pacman -Q | wc -l)
govener=$(cat /sys/devices/system/cpu/cpu0/cpufreq/scaling_governor)

info "Host:"           $host
info "Kernel Version:" $kernel
info "Packages:"       $packages
info "Govener:"        $govener
