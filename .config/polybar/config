[colors]
back = #60000000
border = #aaaaaa
gray = #888888
white = #ffffff

[bar/bar]
modules-left = memory cpu temp
modules-center = date
modules-right = bspwm battery
background = ${colors.back}
tray-background = ${colors.back}
border-size = 1
border-color = ${colors.border}
 width = 1896  # Laptop (1920x1080)
#width = 2536  # Desktop (2560x1440)
 height = 3.2%  # Laptop (1920x1080)
#height = 2.5%  # Desktop (2560x1440)
offset-x = 12
offset-y = 12
padding = 2
module-margin = 2
locale = en_NZ.UTF-8
tray-position = right
# note: the ';2' at the end is vertical offset
font-0 = "Source Code Pro Narrow:size=11;2"
font-1 = "Source Code Pro Narrow:size=8;2"
font-2 = Font Awesome 5 Free:pixelsize=12;2
font-3 = Font Awesome 5 Free Solid:pixelsize=12;2
wm-restack = bspwm

[module/bspwm]
type = internal/bspwm
label-empty-foreground = ${colors.gray}
label-occupied-foreground = ${colors.gray}
label-focused-foreground = ${colors.white}
label-separator = " "

[module/date]
type = internal/date
date = %a %d %b
time = %H:%M
label = %date%  -  %time%
format = <label>

[module/cpu]
type = internal/cpu
interval = .25
format = <label>
label = cpu: %percentage%%

[module/memory]
type = internal/memory
interval = .25
format = <label>
label = ram: %percentage_used%%

[module/iwd]
type = custom/script
exec = iwctl station wlan0 show | head -n 6 | tail -n 1 | awk '{print $2}'
click-left = pkill iwgtk || iwgtk &

[module/battery]
type = internal/battery
adapter = AC
battery = BAT0
full-at = 100
time-format = %H:%M
label-charging = %percentage%%
label-discharging = %percentage%% %time%
label-charging-font = 2
label-discharging-font = 2
format-full = <ramp-capacity>
format-charging = <animation-charging>  <label-charging>
format-discharging = <ramp-capacity>  <label-discharging>
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 

[module/temp]
type = internal/temperature
interval = .25
thermalzone = 0
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon6/temp1_input
base-temperature = 20
warn-temperature = 60